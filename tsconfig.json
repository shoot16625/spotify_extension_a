{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["DOM", "ES2020"],
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "moduleResolution": "node"
  },
  "include": [
    "main/"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
